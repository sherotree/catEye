<!--logs.wxml-->
<view class='wrapper'>
  <view class='header'>
    <view id='movieName'>
    {{detail.movieInfo.movieName}}
    </view>
    <view class='totalInfo'>
      <!-- <view id='relaseInfo'>{{detail.releaseInfo}}
      </view>  -->
      <view id='sumBoxInfo'>总票房{{detail.sumBoxDesc}}</view>
    </view>
  </view>
  <view class='middle'>
    <label>今日实时票房</label>
    <label id='realTimeBox'>{{detail.boxSplitUnit.num}}万</label>
    <label id='boxRate'>票房占比{{detail.boxRate}}</label>
  </view>
  <view class='footer'>
    <view class='fLeft otherInfo'>
      <label>排片场次</label>
      <label id='showInfo'>{{detail.showCount}}</label>
      <label>排片占比{{detail.showCountRate}}</label>
    </view>
    <view class='fRight otherInfo'>
      <label>场均人次</label>
      <label id='avgShowView'>{{detail.avgShowView}}</label>
      <label>上座率{{detail.avgSeatView}}</label>
    </view>
  </view>
</view>
